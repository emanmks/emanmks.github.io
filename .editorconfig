# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Base configuration to be overridden by other sections
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Makefile
[Makefile]
indent_style = tab

# Markdown
[*.md]
trim_trailing_whitespace = false

# JavaScript, TypeScript, JSON, JSON5
[*.js, *.ts, *.json, *.json5]
indent_size = 2

# YAML
[*.yml, *.yaml]
indent_size = 2

# astrofile
[*.astro]
