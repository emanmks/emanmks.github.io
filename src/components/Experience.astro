---
const experiences = [
  {
    company: "Yopeso",
    location: "Remote",
    position: "Senior Software Developer",
    period: "Mar 2019 - Now"
  },
  {
    company: "Metacloud (Sunway Technology Group)",
    location: "Petaling Jaya, Malaysia",
    position: "Senior Software Engineer",
    period: "Jan 2017 - Feb 2019"
  },
  {
    company: "Logistics Consulting Asia",
    location: "Petaling Jaya, Malaysia",
    position: "Application Developer",
    period: "Sep 2015 - Jan 2017"
  },
  {
    company: "CloudApps Technology",
    location: "Remote",
    position: "Senior Web Developer",
    period: "Feb 2015 - Sep 2015"
  },
  {
    company: "Various companies in Indonesia",
    location: "Makassar, Indonesia",
    position: "Desktop Programmer, Web Developer, Branch Manager",
    period: "Sep 2007 - Jan 2015"
  }
];
---

<section>
    <div class="container">
        <div class="ascii-divider">
          ┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈
        </div>

        <h4 style="margin-bottom: 0.5rem; font-weight: 400;">Experience</h4>
        <p style="color: var(--muted-color); margin-bottom: 2rem; font-size: 0.85rem;">15+ years working with teams and companies</p>

        <div class="experience-list">
          {experiences.map((exp, index) => (
            <div class="experience-row">
              <div class="experience-period">
                <span style="font-family: 'Space Mono', monospace; font-size: 0.7rem; color: var(--muted-color);">
                  {exp.period}
                </span>
              </div>
              <div class="experience-divider">
                <span style="font-family: monospace; color: var(--border-color); font-size: 1rem;">┊</span>
              </div>
              <div class="experience-details">
                <div style="font-size: 0.9rem; margin-bottom: 0.15rem; color: var(--secondary-color);">
                  {exp.company}
                </div>
                <div style="font-size: 0.7rem; color: var(--pico-color); margin-bottom: 0.15rem;">
                  {exp.position}
                </div>
                <div style="font-size: 0.65rem; color: var(--muted-color);">
                  {exp.location}
                </div>
              </div>
            </div>
          ))}
        </div>
    </div>
</section>

<style>
  .experience-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 1000px;
  }

  .experience-row {
    display: grid;
    grid-template-columns: 110px 20px 1fr;
    gap: 0.75rem;
    align-items: start;
    padding: 0.25rem 0;
    border-bottom: 1px dashed var(--border-color);
    transition: opacity 0.2s ease;
  }

  .experience-row:last-child {
    border-bottom: none;
  }

  .experience-row:hover {
    opacity: 0.7;
  }

  .experience-period {
    text-align: right;
    padding-top: 0.125rem;
  }

  .experience-divider {
    text-align: center;
    font-size: 1.2rem;
    line-height: 1;
    padding-top: 0.125rem;
  }

  .experience-details {
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .experience-row {
      grid-template-columns: 1fr;
      gap: 0.25rem;
    }

    .experience-period {
      text-align: left;
    }

    .experience-divider {
      display: none;
    }
  }
</style>
