---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h2 class="title mb-4 text-xl">Recent Works & Involvements</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				recentProjects.map(({ href, title, desc }) => (
					<li>
						<a
							href={href}
							target="_blank"
							rel="noopener noreferrer"
							class="cactus-link inline-block"
						>
							{title}
						</a>:
						<p class="inline-block sm:mt-2">{desc}</p>
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
